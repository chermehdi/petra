<div class="row border">
    <form action="/student/profile" enctype="multipart/form-data" method="POST" role="form" id="form" autocomplete="off">
        <div class="col s4 img-area">
            <div class="user-image">
                <img src="images/<%= image %>" alt=" image ">
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span> Update Image </span>
                    <input type="file" id="file" name="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
        </div>
        <div class="col s8">
            <div class="input-field">
                <label for="nom">Full Name : </label>
                <input type="text" id="nom" class="form-control" value="<%= name %>" disabled>
            </div>
            <div class="input-field">
                <label for="cne">CNE : </label>
                <input type="text" id="cne" class="form-control" value="<%= cne %>" disabled>
            </div>
            <div class="input-field">
                <label for="email">Email : </label>
                <input type="email" id="email" name="email" class="form-control" value="<%= email %>">
            </div>
            <div class="input-field">
                <label for="password">Password : </label>
                <input type="password" id="password" name="password" class="form-control" value="">
            </div>
            <div class="input-field" id="password_grp">
                <label for="password_conf">Password Confirmation: </label>
                <input type="password" id="password_conf" name="password_conf" class="form-control" value="">
                <span id="err"></span>
            </div>
            <div class="input-field">
                <a href="#" class="btn btn-warning" type="reset"> Cancel </a>
                <button class="btn btn-primary" name="submit" formmethod="post" type="submit" id="submit">
                  Update Changes
                </button>
            </div>
        </div>
    </form>

</div>